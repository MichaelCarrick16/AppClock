<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imv_default_profile"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_profile_default"
        app:civ_border_color="#FF000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_default_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        app:layout_constraintTop_toBottomOf="@id/imv_default_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/medium"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_default_profile"
        android:background="@color/black"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_default_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/tv_fullname_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name : "
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/semibold"/>

        <EditText
            android:id="@+id/edt_fullname_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_fullname_default"
            android:drawableStart="@drawable/ic_username_login"
            android:drawablePadding="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/regular"
            android:hint="..."

            />

        <TextView
            android:id="@+id/tv_username_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username : "
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/edt_fullname_profile"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/semibold"/>

        <EditText
            android:id="@+id/edt_username_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_username_default"
            android:drawableStart="@drawable/ic_username_profile"
            android:drawablePadding="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/regular"
            android:hint="..."
            android:focusable="false"
            />

        <TextView
            android:id="@+id/tv_address_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address : "
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/edt_username_profile"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/semibold"/>

        <EditText
            android:id="@+id/edt_address_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_address_default"
            android:drawableStart="@drawable/ic_address_register"
            android:drawablePadding="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/regular"
            android:hint="..."

            />

        <TextView
            android:id="@+id/tv_phone_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number : "
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/edt_address_profile"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/semibold"/>

        <EditText
            android:id="@+id/edt_phone_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_phone_default"
            android:drawableStart="@drawable/ic_phone_register"
            android:drawablePadding="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/regular"
            android:hint="..."
            android:inputType="numberDecimal"

            />

        <TextView
            android:id="@+id/tv_password_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password : "
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/edt_phone_profile"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/semibold"/>

        <EditText
            android:id="@+id/edt_password_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_password_default"
            android:drawableStart="@drawable/ic_passwork_login"
            android:drawablePadding="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/regular"
            android:hint="..."
            android:inputType="textPassword"

            />

        <TextView
            android:id="@+id/tv_save_profile"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Save"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/custom_button_login"
            android:fontFamily="@font/semibold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_password_profile"
            android:layout_marginTop="10dp"/>




    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>