<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_defult_dialog"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/orange"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imv_back_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_defult_dialog"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_dialog_back_item_home"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_defult_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Detail"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:fontFamily="@font/bold"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_defult_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="12dp">


        <ImageView
            android:id="@+id/imv_logo_dialog"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_piaget_home"/>

        <TextView
            android:id="@+id/tv_name_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imv_logo_dialog"
            android:text="Rolex Wayne Rooney"
            android:fontFamily="@font/semibold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_price_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_name_dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imv_logo_dialog"
            android:textColor="@android:color/holo_red_dark"
            android:text="3456$"
            android:fontFamily="@font/regular"
            android:textSize="17dp"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/edt_number_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_price_dialog"
            app:layout_constraintStart_toEndOf="@id/imv_logo_dialog"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:text="1"
            android:fontFamily="@font/semibold"/>

        <TextView
            android:id="@+id/tv_purchase_dialog"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/edt_number_dialog"
            app:layout_constraintStart_toEndOf="@id/imv_logo_dialog"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Purchase"
            android:backgroundTint="@color/orange"
            android:gravity="center"
            android:background="@drawable/custom_button_dialog_home"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/medium"
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_defult1_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imv_logo_dialog"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:text="Product Description"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:fontFamily="@font/regular"/>

        <TextView
            android:id="@+id/tv_description_dialog"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_defult1_dialog"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="12dp"
            android:fontFamily="@font/light"
            android:textSize="17dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>