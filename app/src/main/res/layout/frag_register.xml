<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray">

    <ImageView
        android:id="@+id/imv_default_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_getwaves_login"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imv_default_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-100dp"
        android:text="@string/SignUp"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:fontFamily="@font/pattaya"/>

    <EditText
        android:id="@+id/edt_username_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imv_default_register"
        android:layout_margin="12dp"
        android:hint="Username"
        android:drawableStart="@drawable/ic_username_login"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_edittext_login"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:fontFamily="@font/regular"
        android:textSize="17dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/edt_phone_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_username_register"
        android:layout_margin="12dp"
        android:hint="Phone Number"
        android:inputType="numberDecimal"
        android:drawableStart="@drawable/ic_phone_register"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_edittext_login"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:fontFamily="@font/regular"
        android:textSize="17dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/edt_address_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_phone_register"
        android:layout_margin="12dp"
        android:hint="Address"
        android:drawableStart="@drawable/ic_address_register"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_edittext_login"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:fontFamily="@font/regular"
        android:textSize="17dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/edt_password_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_address_register"
        android:inputType="textPassword"
        android:layout_margin="12dp"
        android:hint="Password"
        android:drawableStart="@drawable/ic_passwork_login"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_edittext_login"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:fontFamily="@font/regular"
        android:textSize="17dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/edt_confirm_password_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_password_register"
        android:inputType="textPassword"
        android:layout_margin="12dp"
        android:hint="Confirm Password"
        android:drawableStart="@drawable/ic_passwork_login"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_edittext_login"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:fontFamily="@font/regular"
        android:textSize="17dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_register_register"
        android:layout_width="170dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/edt_confirm_password_register"
        app:layout_constraintStart_toEndOf="@id/tv_cancel_register"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp"
        android:background="@drawable/custom_button_login"
        android:text="Register"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:fontFamily="@font/bold"/>

    <TextView
        android:id="@+id/tv_cancel_register"
        android:layout_width="170dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/edt_confirm_password_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_register_register"
        android:layout_margin="12dp"
        android:background="@drawable/custom_button_register"
        android:text="Cancel"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:fontFamily="@font/bold"/>



</androidx.constraintlayout.widget.ConstraintLayout>