<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_background_item_home"
    android:layout_marginTop="7dp"
    android:id="@+id/constraint_layout_item_all_product">

    <ImageView
        android:id="@+id/imv_logo_all_product"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_piaget_home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_name_all_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Piaget Gala"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imv_logo_all_product"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/bold"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_amount_all_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount : 5"
        app:layout_constraintTop_toBottomOf="@id/tv_name_all_product"
        app:layout_constraintStart_toEndOf="@id/imv_logo_all_product"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:fontFamily="@font/regular"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/tv_price_all_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price : 5456$"
        app:layout_constraintTop_toBottomOf="@id/tv_amount_all_product"
        app:layout_constraintStart_toEndOf="@id/imv_logo_all_product"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/holo_red_dark"
        android:fontFamily="@font/light"
        android:textSize="15dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>