<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nested_scroll_view">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_rolex_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="..."
                android:textColor="@color/black"
                android:textSize="25dp"
                android:fontFamily="@font/bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_rolex_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_rolex_product"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_hublot_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/recycler_view_rolex_product"
                app:layout_constraintStart_toStartOf="parent"
                android:text="..."
                android:textColor="@color/black"
                android:textSize="25dp"
                android:fontFamily="@font/bold"
                android:layout_marginTop="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_hublot_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_hublot_product"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/tv_piaget_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/recycler_view_hublot_product"
                app:layout_constraintStart_toStartOf="parent"
                android:text="..."
                android:textColor="@color/black"
                android:textSize="25dp"
                android:fontFamily="@font/bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_piaget_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_piaget_product"
                app:layout_constraintStart_toStartOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>